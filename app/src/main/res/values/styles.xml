<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--region Base-->
    <style name="BaseItemMaterialCardView">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/VeryDarkGrayishBlue</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">10dp</item>
    </style>
    <!--endregion-->


    <!--region ItemCharacter-->
    <style name="TextItemCharacterSubtitle">
        <item name="android:textColor">@color/Gray55</item>
        <item name="android:textSize">@dimen/textSize_item_character_subtitle</item>
    </style>

    <style name="TextItemCharacterDescription">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/textSize_item_character_description</item>
    </style>
    <!--endregion-->


    <!--region ItemLocation-->
    <style name="TextItemLocationTitle">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/Gray55</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextItemLocationDescription">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--endregion-->


</resources>